{
    "name": "Refresh Web Page Regularly",
    "version": "0.0.0.1",
    "manifest_version": 3,
    "description": "An extension which is High-performance scheduled refresh of web pages to keep your pages signed in",
    "icons": {
        "16": "icons/icon.svg",
        "32": "icons/icon.svg",
        "48": "icons/icon.svg",
        "128": "icons/icon.svg"
    },
    "action": {
        "default_popup": "popup/index.html",
        "default_icon": "icons/icon.svg",
        "default_title": "‚è≥Refresh web pages regularly"
    },
    "background": {
        "service_worker": "bg/store.js"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "run_at": "document_idle",
            "js": [
                "content/refreshConfigPage.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "images/*.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "permissions": [
        "storage",
        "activeTab"
    ]
}